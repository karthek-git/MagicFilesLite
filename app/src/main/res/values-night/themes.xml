	<style name="BlackSanUI" parent="android:Theme.DeviceDefault">
		<item name="android:windowActionBarOverlay">false</item>
		<item name="android:windowBackground">@android:color/black</item>
		<item name="android:windowActivityTransitions">true</item>
		<item name="android:alertDialogTheme">@style/BlackSanUI.Dialog</item>
		<item name="android:actionModeCloseDrawable">@drawable/ic_outline_close_24</item>
		<item name="android:navigationBarColor">@color/colorMainBackGround</item>
	</style>

	<style name="BlackSanUI.Dialog" parent="android:Theme.DeviceDefault.Dialog.Alert">
		<item name="android:background">@color/colorLiiDark</item>
		<item name="android:dialogCornerRadius">14dp</item>
		<item name="android:windowSoftInputMode">stateVisible</item>
		<item name="android:windowAnimationStyle">@style/BlackSanUI_Dialog_show</item>
	</style>

	<style name="BlackSanUI_Dialog_show">
		<item name="android:windowEnterAnimation">@anim/anim_dialog_show</item>
	</style>

	<style name="BlackSanUI.BottomDialog" parent="android:Theme.DeviceDefault.Dialog">

	</style>

